<div class="header">
  <h1>Parkinson's Articles
    <%= link_to "Logout", logout_path, class: "nav-bar-links" %>
    <%= link_to "Home", visitor_welcome_index_path, class: "nav-bar-links"%>
  </h1>
</div>

<div class="column-container">
<h2>Search for PubMed Articles</h2>
  <%= form_tag do %>
  <%= label_tag "Search Terms:" %>
  <%= text_field_tag :search %>
  <%= label_tag "Year:" %>
  <%= text_field_tag :year %>
  <%= submit_tag "Search!" %>
<% end  %>

<h3>PubMed IDs for search:</h3>
<% @articles.each do |article| %>
  <li><%= link_to article.address, "https://www.ncbi.nlm.nih.gov/pubmed/#{article.address}/"%></li>
<% end %>
</div>
