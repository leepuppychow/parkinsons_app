<div class="header">
  <h1>Parkinson's Articles
    <%= link_to "Logout", logout_path, class: "nav-bar-links" %>
    <%= link_to "Home", patient_path(@patient), class: "nav-bar-links"%>
  </h1>
</div>

<div class="column-container">
<h2>Search for PubMed Articles</h2>
  <%= form_tag do %>
    <%= label_tag "Search Terms:" %>
    <%= text_field_tag :search %>
    <%= label_tag "Year:" %>
    <%= text_field_tag :year %>
    <%= submit_tag "Search!" %>
  <% end  %>
</div>
</br>
<% @articles.each do |article| %>
  <p><%= link_to article[1], "https://www.ncbi.nlm.nih.gov/pubmed/#{article[0]}/"%></p>
<% end %>
