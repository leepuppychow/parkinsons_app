<div class="column-container">
  <table class="form-table">
    <%= form_for [@patient, @activity] do |f| %>
      <tr>
        <th><%= f.label :description %></th>
        <th><%= f.text_field :description, class: "entry-form" %></th>
      </tr>
      <tr>
        <th><%= f.label "Total(min)" %></th>
        <th><%= f.number_field :duration, class: "entry-form" %></th>
      </tr>
      <tr>
        <th> <%= f.label "Date" %></th>
        <th> <%= f.date_field :date_performed, class: "entry-form" %></th>
      </tr>
  </table>
      <%= f.submit %>
      <% end  %>
</div>
