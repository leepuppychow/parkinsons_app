<%= render partial: "partials/doctor_header" %>

<div class="column-container-left">
  <h2>Welcome, <%= current_user.name %></h2>
  <h3>Here are today's appointments:</h3>
  <table class="provider-table">
    <tr>
      <th class="column-headers">Time</th>
      <th class="column-headers">First Name</th>
      <th class="column-headers">Last Name</th>
      <th class="column-headers">Age</th>
    </tr>
    <% @appointments.each do |appointment| %>
      <tr class="appointment">
        <th> <%= appointment.pretty_time %> </th>
        <th> <%= appointment.patient.first_name %></th>
        <th> <%= appointment.patient.last_name %></th>
        <th> <%= appointment.patient.age %></th>
      </tr>
    <% end %>
  </table>
</div>

<%= render partial: "partials/doctor_footer" %>
