<div class="header">
  <h1>Admin - Edit Exercise
    <%= link_to "Logout", logout_path, class: "nav-bar-links" %>
    <%= link_to "Home", admin_welcome_index_path, class: "nav-bar-links" %>
    <%= link_to "Exercises", admin_exercises_path, class: "nav-bar-links" %>
  </h1>
</div>

<table class="form-table">
<%= form_for @exercise, url: admin_exercise_path(@exercise) do |f| %>
<tr>
  <th><%= f.label :name %></th>
  <th><%= f.text_field :name, class: "entry-form" %></th>
</tr>
<tr>
  <th><%= f.label :description %></th>
  <th><%= f.text_area :description, class: "entry-form" %></th>
</tr>
<tr>
  <th><%= f.label "Image URL:"%></th>
  <th><%= f.text_field :image, class: "entry-form" %></th>
</tr>
<tr>
  <th><%= f.submit "Submit" %></th>
</tr>
<% end %>

</table>
